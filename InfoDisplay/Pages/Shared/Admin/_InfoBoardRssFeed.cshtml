@using System.ServiceModel.Syndication
@using Gitec.Services
@inject RssFeedService RssService
@model Gitec.InfoDisplay.Models.InfoBoardItemRssFeed

@{
    var feedItems = await RssService.GetFeedItemsAsync(Model.RssFeedUrl, 3);
}

<form asp-action="Save" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Feed Title</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RssFeedUrl" class="form-label">RSS Feed URL</label>
        <input asp-for="RssFeedUrl" type="url" class="form-control" required />
        <span asp-validation-for="RssFeedUrl" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MaxArticles" class="form-label">Number of Articles</label>
        <input asp-for="MaxArticles" type="number" class="form-control" min="1" max="10" required />
        <span asp-validation-for="MaxArticles" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
