@using Gitec.GitecBulletin.Enums
@model Gitec.InfoDisplay.Models.InfoBoardItemImage

<form asp-action="Save" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <input asp-for="ImageUrl" class="form-control" required />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageAlt" class="form-label">Alt Text</label>
        <input asp-for="ImageAlt" class="form-control" required />
        <span asp-validation-for="ImageAlt" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageCaption" class="form-label">Image Caption (optional)</label>
        <input asp-for="ImageCaption" class="form-control" />
        <span asp-validation-for="ImageCaption" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageStory" class="form-label">Image Story</label>
        <textarea asp-for="ImageStory" class="form-control" rows="4" required></textarea>
        <span asp-validation-for="ImageStory" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageSide" class="form-label">Image Side</label>
        <select asp-for="ImageSide" asp-items="Html.GetEnumSelectList<Side>()" class="form-select" required></select>
        <span asp-validation-for="ImageSide" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}